{
  "name": "youzan spider",
  "description": "a spider for youzan.com",
  "version": "1.2",
  "manifest_version": 2,
  "author": "Frank Fan",
  "homepage_url": "https://github.com/FrankFan/youzan-spider",

  "background": {
    "persistent": false,
    "page": "background.html"
  },

  "browser_action": {
    "default_icon": "assets/128.png"
  },

  "icons": {
    "16": "assets/128.png",
    "32": "assets/128.png",
    "48": "assets/128.png",
    "128": "assets/128.png",
    "256": "assets/128.png"
  },
  
  "permissions": [
    "*://*.youzan.com/"
   ]
}